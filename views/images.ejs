<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("partials/head") %>

  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("partials/header") %>
    <main>
      <!-- *********DISPLAY OUR IMAGES********* -->
      <h1 class="title">A Place to Store your Images</h1>
      <a href="/auth/logout"><button class="button">Logout</button></a>
      <% for (image of images) { %>
      <a href="/images/<%= image._id %>/edit"><img src="<%= image.url %>" alt="image" /></a>

      <% } %>

      <!-- **********NEW IMAGES FORM**************** -->
      <div class="add-new-images">
      <form action="/images" method="POST">
        <input type="text" placeholder="new image" name="url" />
        <input type="submit" value="add image" />
      </form>
      </div>
    </main>
    <!-- THE HEAD TAG PARTIAL -->
    <%- include("partials/footer") %>
  </body>
</html>